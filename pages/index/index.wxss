.right-sec .title {
  position: absolute;
  top: 12rpx;
  width: 100%;
  height: 40rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
  font-size: 32rpx;
}

.right-sec .description {
  margin-top: 80rpx;
  font-size: 24rpx;
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;
  padding-left: 0rpx;
}


