/**index.wxss**/
.nav-context-container{
  position: relative;  
  margin-top: 100rpx;
  flex: auto;  
  width: 100%;
  text-align: center;
}

.nav-context-container .company-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 100%;

}
.nav-context-container .company-info .logo {
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
}
.nav-context-container .company-info .company-name {
  color: #159066;
  font-size: 18pt;
  margin-top: 30rpx;
}
.nav-context-container .company-info .company-desc{
  text-indent: 22pt;
  font-size: 11pt;
  line-height: 40rpx;
}

.nav-context-container .company-info .contact-us{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}
.nav-context-container .company-info .company-address, .company-phone{
  font-size: 12pt;
  margin: 20rpx;
}
.nav-context-container .phone{
  margin-bottom: 50rpx;
}

/**公司轮播图片*/
.company-swiper-view{
  width: 100%;
  height: 400rpx;
  background: white;
  border: 2rpx solid #e5e5e5;
}
.company-swiper-sec{
    width: 100%;
    height: 100%;
  }
.company-swiper-image{
    display: block;
    width:100%;
    height: 400rpx;
  }



.top-slider {
  display: block;
  width: 100%;
  height: 40%;
  background: white;
  border: 2rpx solid #e5e5e5;
}