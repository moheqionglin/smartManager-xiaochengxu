/**index.wxss**/
.nav-context-container{
  position: relative;  
  margin-top: 100rpx;
  flex: auto;  
  width: 100%;
  padding-bottom: 50rpx;
  /* text-align: center; */
}

.nav-context-container .company-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;

}
.nav-context-container .company-info .logo {
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
}
.nav-context-container .company-info .company-name {
  color: #159066;
  font-size: 18rpt;
  margin-top: 30rpx;
}
.nav-context-container .company-info .company-desc{
  /* text-indent: 22pt; */
  font-size: 35rpx;
  line-height: 50rpx;
  font-weight: 300;

}
.hidden-company-desc{

  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:4;

}
.nav-context-container .company-info .contact-us{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  padding: 0;
  color: #808080;
  box-shadow:1rpx 1rpx 1rpx 1rpx #e2e2e3;
  border-radius: 25rpx;
  overflow-x: hidden;
  width: 95%;
}
.contact-header{
  display: flex;

}

.contact-header .contact-call-img{
  width: 120rpx;
  height: 120rpx;
}
.contact-us  .contact-content{
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.contact-us map{
  width: 100%; 
  height: 250rpx;
  margin-top:10rpx
}
.nav-context-container .company-info .company-address, .company-phone{
  font-size: 30rpx;
  margin: 0;
  /* margin: 20rpx; */
}
.nav-context-container .start-map{
  margin: 20rpx 10% 50rpx 10%;
  background-color: #159066;
  color: #fff;

}

